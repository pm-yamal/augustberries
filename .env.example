# ==================== Augustberries Environment Configuration ====================
# Скопируйте этот файл в .env и настройте значения под ваше окружение
# cp .env.example .env

# ==================== PostgreSQL Databases ====================

# Auth Service Database
POSTGRES_AUTH_USER=postgres
POSTGRES_AUTH_PASSWORD=postgres
POSTGRES_AUTH_DB=auth_service

# Catalog Service Database
POSTGRES_CATALOG_USER=postgres
POSTGRES_CATALOG_PASSWORD=postgres
POSTGRES_CATALOG_DB=catalog_service

# Orders Service Database
POSTGRES_ORDERS_USER=postgres
POSTGRES_ORDERS_PASSWORD=postgres
POSTGRES_ORDERS_DB=orders_service

# ==================== MongoDB ====================

MONGO_ROOT_USERNAME=mongo
MONGO_ROOT_PASSWORD=mongo_password
MONGO_DATABASE=reviews_service

# Mongo Express (Web UI)
MONGO_EXPRESS_USERNAME=admin
MONGO_EXPRESS_PASSWORD=admin

# ==================== Redis ====================

REDIS_PASSWORD=redis_password

# ==================== JWT Configuration ====================
# ВАЖНО: Измените JWT_SECRET на случайную строку в production!

JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_DURATION=15m
JWT_REFRESH_DURATION=168h

# ==================== Exchange Rate API ====================

EXCHANGE_RATE_API_URL=https://api.exchangerate-api.com/v4/latest/USD
EXCHANGE_RATE_API_TIMEOUT=10

# Cron schedule для обновления курсов валют (каждые 30 минут)
CRON_SCHEDULE=*/30 * * * *

# ==================== Logging ====================

LOG_LEVEL=info

# ==================== Monitoring ====================

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Elasticsearch
ES_JAVA_OPTS=-Xms512m -Xmx512m

# Logstash
LS_JAVA_OPTS=-Xms256m -Xmx256m
